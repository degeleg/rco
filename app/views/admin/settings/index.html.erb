<% heading "Business Locations" %>
<%= link_to 'Add Location', new_admin_setting_path, class: 'btn btn-primary' %>
<div class="row">
	<% @settings.each do |location| %>
		<address class="col-md-4">
			<h3><%= location.name %></h3>
			<ul>
				<li><strong>Street:</strong> <%= location.street_address %></li>
				<li><strong>Other:</strong> <%= location.alternate_address %></li>
				<li><strong>City:</strong> <%= location.city %> </li>
				<li><strong>State:</strong> <%= location.state %> </li>
				<li><strong>Zip:</strong> <%= location.zip %></li>
				<li><strong>Phone:</strong> <%= location.phone %></li>
				<li><strong>Fax:</strong> <%= location.fax %></li>
			</ul>
			<div>
				<%= link_to 'Delete Location', admin_setting_path(location), method: :delete, class: 'btn btn-danger' %>
				<%= link_to 'Edit Location', edit_admin_setting_path(location), class: 'btn btn-info' %>
			</div>
		</address>

		
	<% end %>
</div>


